<h1>Names</h1>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% all_names.each do |name| %>
      <tr>
        <td><%= name.first_name %></td>
        <td><%= name.middle_name %></td>
        <td><%= name.last_name %></td>
        <td>
          <%= hidden_field_tag 'show', name_path(name), class: 'show_operation'%>
          <%= button_tag 'Show', data: { action: 'click->crud#show' } %>
        </td>
        <td>
          <%= hidden_field_tag 'edit', edit_name_path(name), class: 'edit_operation'%>
          <%= button_tag 'Edit', data: { action: 'click->crud#edit' } %>
        </td>
        <td>
          <%= button_to 'Destroy', name_path(name), method: :delete, remote: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= hidden_field_tag 'show', new_name_path, class: 'new_operation'%>
<%= button_tag 'New Name', data: { action: 'click->crud#new_name' } %>
