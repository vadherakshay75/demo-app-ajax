<div data-controller= 'crud'>
  <%= form_with(model: name, remote: true) do |form| %>
    <% if name.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(name.errors.count, "error") %> prohibited this name from being saved:</h2>
        <ul>
          <% name.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name %>
    </div>
    <div class="field">
      <%= form.label :middle_name %>
      <%= form.text_field :middle_name %>
    </div>
    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
